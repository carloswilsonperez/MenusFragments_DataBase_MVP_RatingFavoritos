<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="20sp"
    android:layout_margin="@dimen/espacio_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view_mascota"
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:layout_gravity="center"
            android:src="@drawable/pet_1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/espacio_10"
            android:layout_marginBottom="@dimen/espacio_10">

            <ImageView
                android:id="@+id/image_view_dog_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/espacio_10"
                android:layout_marginRight="@dimen/espacio_10"
                android:background="@drawable/dog_bone_1" />

            <TextView
                android:id="@+id/text_view_nombre_mascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/espacio_10"
                android:layout_marginRight="@dimen/espacio_10"
                android:layout_toEndOf="@+id/image_view_dog_like"
                android:text="@string/nombre_mascota" />

            <TextView
                android:id="@+id/text_view_like_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/espacio_10"
                android:layout_marginRight="@dimen/espacio_10"
                android:layout_toStartOf="@+id/image_view_dog_total_like"
                android:text="@string/contador_likes" />

            <ImageView
                android:id="@+id/image_view_dog_total_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/espacio_10"
                android:layout_marginRight="@dimen/espacio_10"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/dog_bone_2" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>