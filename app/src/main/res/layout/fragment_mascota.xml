<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="nico.menus_fragments.fragments.MascotaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/tam_25"/>

        <TextView
            android:id="@+id/text_view_nombre_mascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombre_mascota"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="@dimen/tam_25"
            android:paddingBottom="@dimen/espacio_10"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_mascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</FrameLayout>
